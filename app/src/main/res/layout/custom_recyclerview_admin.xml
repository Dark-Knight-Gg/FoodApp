<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/adminImg"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/adminImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/adminTxtname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/adminTxtname"
        app:layout_constraintLeft_toRightOf="@id/adminImg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/adminTxtDescribe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/adminTxtDescribe"
        app:layout_constraintLeft_toRightOf="@id/adminImg"
        android:id="@+id/adminTxtPrice"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintLeft_toRightOf="@id/adminTxtname"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/delete"
        android:id="@+id/adminImgDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>