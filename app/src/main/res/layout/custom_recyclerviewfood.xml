<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/customImg"
        android:layout_width="50dp"
        android:layout_height="60dp"/>
    <TextView
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/customImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/customTxtName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/customImg"
        android:layout_marginStart="10dp"
        android:id="@+id/customTxtDescribe"
        app:layout_constraintTop_toBottomOf="@id/customTxtName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/customTxtPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/customTxtName"
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="17sp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/customTxtPrice"
        app:layout_constraintLeft_toRightOf="@id/customTxtDescribe"
        android:layout_marginStart="10dp"
        android:id="@+id/customEdtCount"
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/customImg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:text="Oder"
        android:layout_marginTop="10dp"
        android:id="@+id/customBtn"
        android:textAllCaps="false"
        android:backgroundTint="#457FE3"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>